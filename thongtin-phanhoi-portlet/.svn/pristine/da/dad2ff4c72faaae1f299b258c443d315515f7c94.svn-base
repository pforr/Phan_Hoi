				sql.append(" AND b.yeucau_giaitrinh_id NOT IN(SELECT c.yeucau_giaitrinh_id FROM ws_phanhoi.ws_trangthai_giaitrinh c WHERE c.trangthai = ").append(ThongTinPhanHoiConstants.ActionMode.DONG_YCGT).append(" or c.trangthai = ").append(ThongTinPhanHoiConstants.ActionMode.HUY_YCGT).append(")");
			}

